{% extends 'layouts/main.twig' %}

{% block content %}
    {% for good in goods %}
        <h1><a href="/good/one?id={{ good.id }}">
                {{ good.name }}
            </a></h1>
        <p>{{ good.price }}</p>
        <a href="/basket/add?id={{ good.id }}">Добавить в корзину</a>
    {% else %}
        <h1>Не найден товар</h1>
    {% endfor %}
{% endblock %}
