{% extends 'layouts/main.twig' %}

{% block content %}
    {% if isLogged == true %}
        <h1>Добро пожаловать, {{ fio }}</h1>
        <h4>Вы вошли как {{ login }}</h4>
        <h2><a href="/auth/logOut">Выйти</a></h2>
    {% else  %}
        <h1>Авторизация:</h1>
        <form method="post" action="/auth/logOn">
            <fieldset class="entry_form"><legend>Вход</legend>
                <input type="text" name="login" placeholder="Login">
                <input type="text" name="password" placeholder="Password">
                <input type="submit"  value="Войти">
            </fieldset>
        </form>
        <h2><a href="/auth/register">Регистрация</a></h2>
    {% endif %}
    <h4>{{ message }}</h4>
{% endblock %}