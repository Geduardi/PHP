{% extends 'layouts/main.twig' %}

{% block content %}
    {% for id,item in cart %}
        <h1><a href="/good/one?id={{ id }}">
                {{ item.name }}
            </a></h1>
        <p>{{ item.price }}$ x  {{ item.count }}</p>
        <p><a href="/basket/add?id={{ id }}">Добавить один</a>|<a href="/basket/del?id={{ id }}">Убрать один</a>|<a href="/basket/delAll?id={{ id }}">Убрать весь товар</a></p>
        <hr>
    {% else %}
        <h1>Корзина пуста</h1>
    {% endfor %}
{% endblock %}
